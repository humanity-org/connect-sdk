{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@contracts/*": [
        "src/contracts/*"
      ],
      "@structures/*": [
        "src/sdk-base/structures/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["**/__tests__/**"]
}

